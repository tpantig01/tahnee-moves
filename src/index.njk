---
layout: base.njk
title: Flexibility & Pole Classes
---

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1 class="logo">
            TAHNEE
            <span class="logo-accent">MOVES</span>
        </h1>
        <p class="tagline">{{ homepage.tagline }}</p>
        <a href="#approach" class="cta-button">Explore Classes</a>
    </div>
</section>

<!-- Approach Section -->
<section id="approach" class="approach">
    <h2 class="section-title">My Approach</h2>
    <p style="font-size: 1.2rem; max-width: 800px; margin-bottom: 2rem; line-height: 1.7;">
        {{ homepage.approach_intro }}
    </p>
    
    <div class="approach-grid">
        {% for item in collections.approach | sort(false, false, 'data.order') %}
        <div class="approach-card fade-in">
            <h3>{{ item.data.title }}</h3>
            <p>{{ item.data.description }}</p>
        </div>
        {% endfor %}
    </div>

    <div style="margin-top: 3rem; padding: 2rem; background: rgba(0,0,0,0.05);">
        <h3 style="font-family: 'Bebas Neue', sans-serif; font-size: 2rem; margin-bottom: 1rem; letter-spacing: 0.05em;">{{ homepage.hormonal_health_title }}</h3>
        <p style="line-height: 1.7;">{{ homepage.hormonal_health_text }}</p>
    </div>
</section>

<!-- Qualifications Section -->
<section class="qualifications">
    <h2 class="section-title">Qualifications & Background</h2>
    <div class="qual-content">
        <div class="qual-intro fade-in">
            <p>{{ homepage.qual_intro_1 }}</p>
            <p style="margin-top: 1.5rem;">{{ homepage.qual_intro_2 }}</p>
            <p style="margin-top: 1.5rem;">{{ homepage.qual_intro_3 }}</p>
        </div>

        <div class="fade-in">
            <ul class="qual-list">
                {% for item in collections.qualifications | sort(false, false, 'data.order') %}
                <li><strong>{{ item.data.title }}</strong> {{ item.data.description }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</section>

<!-- Sample Classes -->
<section class="sample-classes">
    <h2 class="section-title">Sample Classes</h2>
    
    <div class="class-grid">
        {% for class in collections.classes %}
        <div class="class-card fade-in">
            <div class="class-label" style="{% if class.data.color == 'hot-pink' %}background: var(--hot-pink); color: var(--white);{% elif class.data.color == 'sky-blue' %}background: var(--sky-blue); color: var(--black);{% else %}background: var(--lime); color: var(--black);{% endif %}">
                {{ class.data.label | replace(" ", "<br>") | safe }}
            </div>
            <div class="class-details">
                <h3>{{ class.data.title }}</h3>
                <div class="class-meta">
                    <span>{{ class.data.duration }}</span>
                    <span>{{ class.data.level }}</span>
                </div>
                <p>{{ class.data.description1 }}</p>
                <p>{{ class.data.description2 }}</p>
                <div class="class-highlights">
                    {% for highlight in class.data.highlights %}
                    <span class="highlight-tag">{{ highlight }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<!-- FAQ Section -->
<section class="faq">
    <h2 class="section-title">Frequently Asked Questions</h2>
    
    <div class="faq-list">
        {% for item in collections.faq | sort(false, false, 'data.order') %}
        <div class="faq-item fade-in">
            <div class="faq-question">{{ item.data.question }}</div>
            <div class="faq-answer">
                <p>{{ item.data.answer }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<!-- Footer -->
<footer>
    <div class="footer-content">
        <div class="footer-links">
            <a href="#approach">Approach</a>
            <a href="#qualifications">About</a>
            <a href="#sample-classes">Classes</a>
            <a href="#faq">FAQ</a>
        </div>
        <p style="opacity: 0.6; margin-top: 2rem;">&copy; 2025 Tahnee Moves. Movement that moves with you.</p>
    </div>
</footer>
